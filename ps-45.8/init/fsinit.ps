userdict begin

  /FSRoot () def

  /EncodingDirectory 64 trickydict def

  /FSstrPR 128 string def
  /FSstrAN 64 string def
 
end      %userdict

systemdict begin

  /PrependRoot
  {
    FSRoot length 0 eq
    {
      FSstrPR cvs
    }
    {
      FSRoot FSstrPR cvs length exch 2 copy length add
      FSstrPR 4 2 roll putinterval FSstrPR exch 0 exch getinterval
    }
    ifelse
  }
  bind readonly def

  /AppendName
  {
    FSstrAN cvs length dup FSstrAN exch FSstrAN length 1 index sub getinterval
    2 index exch cvs
    length add FSstrAN exch 0 exch getinterval
  }
  bind readonly def



  /findencoding
  {
    dup userdict /EncodingDirectory get exch known not
      {(encodings/) PrependRoot AppendName run} if
    userdict /EncodingDirectory get exch get
  }
  bind readonly def


end      %systemdict
