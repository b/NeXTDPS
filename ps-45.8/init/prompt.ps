% tty interaction package

/PromptString
 {$prompt begin
  print
  in pmpts readline pop dup length string copy
  end
 }def

/PromptNumber
 {$prompt begin
  print
  {in pmpts readline
    {token {exch pop dup type /integertype 
	     eq {/num exch def exit}if
	   }if
    }if
    (bad number- try again) = }loop
  num
 end
 }def

/PromptReal
 {$prompt begin
  print
  {in pmpts readline
    {token {exch pop dup type dup /realtype ne{ /integertype 
	     eq {/num exch def exit}if}{pop /num exch def exit}ifelse
	   }if
    }if
    (bad number- try again) = }loop
  num
 end
 }def
