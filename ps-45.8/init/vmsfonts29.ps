% This file is specialized for loading fonts into a target product's VM.
% The current working directory must contain the copyright.ps file
% appropriate for the product being built.
% On entry, the stack must contain a string which is the path to the
% directory from which fonts are to be loaded.

% Following unnamed procedure loads font whose name is on top of stack.
% Stack should contain: path proc fontname
% Fontname is ordinarily a name object but can be a string.

   {2 index =string copy pop
    =string 3 index length dup =string length exch sub getinterval cvs
    length 2 index length add =string exch 0 exch getinterval
    Run
    currentshared
      {(Shared VM: )}
      {(Private VM: )}
    ifelse print
    vmstatus pop = pop
   }

(CharMap.ps) 1 index exec

currentfile =string readline copyright.ps
pop run

/Courier 1 index exec
/Courier_Oblique 1 index exec
/Courier_Bold 1 index exec
/Courier_BoldOblique 1 index exec

exch pop % pop PRELOADED_FONTS path, now use DYNAMIC_FONTS

currentfile =string readline copyright.ps
pop run

/AvantGarde_Book 1 index exec
/AvantGarde_BookOblique 1 index exec
/AvantGarde_Demi 1 index exec
/AvantGarde_DemiOblique 1 index exec

currentfile =string readline copyright.ps
pop run

/Helvetica 1 index exec
/Helvetica_Bold 1 index exec
/Helvetica_BoldOblique 1 index exec
/Helvetica_Oblique 1 index exec

/LubalinGraph_Book 1 index exec
/LubalinGraph_BookOblique 1 index exec
/LubalinGraph_Demi 1 index exec
/LubalinGraph_DemiOblique 1 index exec

currentfile =string readline copyright.ps
pop run

/NewCenturySchlbk_Bold 1 index exec
/NewCenturySchlbk_BoldItalic 1 index exec
/NewCenturySchlbk_Italic 1 index exec
/NewCenturySchlbk_Roman 1 index exec

currentfile =string readline copyright.ps
pop run

/Souvenir_Demi 1 index exec
/Souvenir_DemiItalic 1 index exec
/Souvenir_Light 1 index exec
/Souvenir_LightItalic 1 index exec

currentfile =string readline copyright.ps
pop run

/Symbol 1 index exec

/Times_Bold 1 index exec
/Times_BoldItalic 1 index exec
/Times_Italic 1 index exec
/Times_Roman 1 index exec

currentfile =string readline copyright.ps
pop run

pop % proc
pop % path
